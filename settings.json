{
  "amp.internal.showCost": false,
  "amp.mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest",
        "--headless",
        "--isolated"
      ],
      "_target": "global"
    }
  },
   "amp.permissions": [
    {
      "tool": "Bash",
      "action": "ask",
      "matches": {
        "cmd": [
          "*rm*-rf*",
          "*rm*-r*--force*",
          "*rm*--force*-r*"
        ]
      }
    },
    {
      "tool": "Bash",
      "action": "ask",
      "matches": {
        "cmd": [
          "*find*-exec*",
          "*find*-delete*"
        ]
      }
    },
    {
      "tool": "Bash",
      "action": "ask",
      "matches": {
        "cmd": [
          "*git*push*--force*",
          "*git*push*-f*"
        ]
      }
    },
    {
      "tool": "Bash",
      "action": "ask",
      "matches": {
        "cmd": [
          "sudo*",
          "su*",
          "*chmod*777*",
          "*chown*root*"
        ]
      }
    },
    {
      "tool": "*",
      "action": "allow",
      "matches": {}
    }
  ]
}
